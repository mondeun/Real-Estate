@model IEnumerable<Real_Estate.Models.Viewing>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    <li><a href="~/Web_Forms/BookViewForm.aspx">Book a viewing</a></li>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Agent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RealEstateObject.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ViewingStart)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ViewingStop)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaximumNoCustomerPerViewing)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Agent.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RealEstateObject.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ViewingStart)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ViewingStop)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaximumNoCustomerPerViewing)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ViewingID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ViewingID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ViewingID })
        </td>
    </tr>
}

</table>
